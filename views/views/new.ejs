<%- include('../partials/header-standalone') %>

<div class="mb-6">
    <a href="/views" class="text-blue-600 hover:text-blue-700 flex items-center mb-4">
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Views
    </a>
    <h3 class="text-2xl font-bold text-gray-800">Create New ACL View</h3>
    <p class="text-gray-600 mt-1">Create a split-horizon view with ACL entry rules</p>
</div>

<div class="content-card max-w-2xl">
    <form method="POST" action="/views" class="space-y-6">
        <div class="form-group">
            <label for="name" class="form-label">View Name *</label>
            <input type="text" id="name" name="name" class="form-input" placeholder="internal" required>
            <p class="form-help">Short name used to identify the view (e.g., internal, external)</p>
        </div>

        <div class="form-group">
            <label class="form-label">Allow (match-clients)</label>
            <textarea id="allow" name="allow" rows="3" class="form-input" placeholder="10.0.0.0/8\n192.168.0.0/16">any</textarea>
            <p class="form-help">List of networks to allow accessing this view (one per line). Use 'any' to allow all.</p>
        </div>

        <div class="form-group">
            <label class="form-label">Deny</label>
            <textarea id="deny" name="deny" rows="3" class="form-input" placeholder="0.0.0.0/0"></textarea>
            <p class="form-help">List of networks to deny (one per line). Keep empty if none.</p>
        </div>

        <div class="flex items-center space-x-4">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i>Create View</button>
            <a href="/views" class="btn">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer-standalone') %>
